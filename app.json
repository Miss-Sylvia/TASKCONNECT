{
  "expo": {
    "name": "TASKCONNECT",
    "slug": "taskconnect",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow TASKCONNECT to use your camera.",
        "NSMicrophoneUsageDescription": "Allow TASKCONNECT to record audio.",
        "NSPhotoLibraryUsageDescription": "Allow TASKCONNECT to access your photos.",
        "NSPhotoLibraryAddUsageDescription": "Allow TASKCONNECT to save media."
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "READ_EXTERNAL_STORAGE"
      ]
    },

    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
